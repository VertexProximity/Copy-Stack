{
    "manifest_version": 2,
    "name": "Clipboard History",
    "version": "1.0",
    "description": "Stores and displays clipboard history.",
    "permissions": ["clipboardRead", "storage"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "48": "icon.png",
      "128": "icon.png"
    }
  }